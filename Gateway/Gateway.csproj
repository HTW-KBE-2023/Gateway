    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>70e12de4-1084-4baa-bc51-028c113d4ab6</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>

  <ItemGroup>
